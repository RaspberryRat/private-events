<p>Find Your Happening Today</p>

<p><%= link_to "Add New happening", new_event_path %></p>

<h3>Upcoming Happenings</h3>
<ul>
  <% @events.future.each do |event| %>
  <li><%= link_to event.title, event %></li>
  <li><%= link_to event.creator.user_name, event.creator %></li>
  <li><%= link_to event.description, event %></li>
  <br><br>
  <% end %>

</ul>

<h3>Past Happenings</h3>
<ul>
  <% @events.past.each do |event| %>
  <li><%= link_to event.title, event %></li>
  <li><%= link_to event.creator.user_name, event.creator %></li>
  <li><%= link_to event.description, event %></li>
  <br><br>
  <% end %>

</ul>


 <div class="flash-message">
  <% flash.each do |name, message| %>
  <div class="<%= name %>"><%= message %></div>
  <% end %>
</div>

